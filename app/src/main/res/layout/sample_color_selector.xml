<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_selector_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="顏色"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cur_color_image_view"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            tools:srcCompat="@android:drawable/screen_background_light_transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_a_label"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/color_a_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:max="255"/>

        <TextView
            android:id="@+id/color_a_value"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="100%" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_r_label"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="R"
            android:textSize="20dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/color_r_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:max="255"/>

        <TextView
            android:id="@+id/color_r_value"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|end"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_g_label"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="G"
            android:textSize="20dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/color_g_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:max="255"/>

        <TextView
            android:id="@+id/color_g_value"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|end"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_b_label"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="B"
            android:textSize="20dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/color_b_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:max="255"/>

        <TextView
            android:id="@+id/color_b_value"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|end"
            android:text="0" />
    </LinearLayout>
</LinearLayout>