<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="50dp"
    tools:context=".folders.FolderUpdateFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/current_folder_rectangle"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/current_folder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_folder_solid" />

        <TextView
            android:id="@+id/current_folder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/folder_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名稱"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/folder_name_input"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/edittext_rectangle"
            android:elevation="@dimen/cardview_default_radius"
            android:hint="輸入名稱(20字元)"
            android:inputType="textPersonName"
            android:maxLength="20"/>

    </LinearLayout>
    <com.example.treasury.component.ColorSelector
        android:id="@+id/color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleLabel="選擇顏色" />

    <Button
        android:id="@+id/folder_action_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_100"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="儲存" />

</androidx.appcompat.widget.LinearLayoutCompat>